% Table Header
\newcommand{\header}[1]{{
    \par\vspace*{8pt}
    \noindent
    \pf@TableTitleFont
    #1}}

% Centered Column
\newcolumntype{Y}{>{\centering\arraybackslash}X}

% Table Environment
\newenvironment{pf-table}[1][lX]{
    \par\vspace*{8pt}
    \noindent
    \pf@TableBodyFont
    \rowcolors{1}{bgtan}{commentgreen} % Alternate colors
    \tabularx{\linewidth}{#1}
}{
    \endtabularx
    \vspace{8pt plus 1pt}
    \noindent
}

