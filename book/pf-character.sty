\newtcolorbox{pfBackground}[2][]{
  enhanced,
  frame hidden,
  boxrule=0pt,
  breakable,
  boxsep=0pt,
  toptitle=3mm,
  left=0pt,
  right=0pt,
  arc=0mm,
  opacityback=0,
  colframe=title1,
  fonttitle=\pf@StatBlockTitleFont,
  fontupper=\pf@StatBlockBodyFont,
  title={#2 \hfill Background},
  coltitle=creature,
  #1
}

