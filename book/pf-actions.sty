\usepackage{graphicx}

%
% Actions, Reactions, and things like that
%

% Black magic from StackOverflow
\newcommand*\img[1]{%
  \raisebox{-0.2\baselineskip}{%
      \includegraphics[
        height=\baselineskip,
        keepaspectratio,
      ]{#1}%
  }
}

%
% Actions & Activities
%

\newenvironment{pf-action}[1]{%
  \img{lib/book/img/Action}\hangindent=\baselineskip\textbf{#1}%
  {\unskip}%
